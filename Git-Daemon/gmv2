#!/usr/bin/env bash
# set -x;
DISP=1
declare -a TERMSIZE=( $(stty size) )
declare DIRECTORY;
declare COMIT_MSG
declare BRANCH
declare FORCE
declare OPER

_net_(){
  ping "google.com" -c 2 1>/dev/null 2>&1;
  net_status=$?
  if [[ $net_status -ne 0 ]]; then
    sleep 2
    if [[ $DISP -ne 0 ]]; then
      DISP=0
      echo -en "\E[1;31m You are offline üòñ PS:(\E[m\n \E[1;33m Waiting for internet connection to come back ... ü§¢ü§¢ \E[m";
    fi
    _net_
  else
          echo -e "\E[5;35m \E[1m you are Online PS üëç :)\E[m \E[m";
  fi
  return $?
}

_help(){
  echo -e "Usage:
  $0 [ARGS]

  ARGS:
  -h --help get help menu.
  -o --op opration to perform.
  -f --force force the operation.
  -d --directory directory to push.
  -b --branch branch to carry operations on."
}

_exec_ops(){
  cd ${DIRECTORY:-.}
  if [[ $OPER=="push" ]]; then
      git add --all
      git commit -m ${COMIT_MSG:-"patch auto-gen by ${0:0} under account $USER"}
  fi
  # check internet connectivity
  echo -ne "\033[1;33m Checking your connection...üëÄ \033[m"
  _net_
  echo -ne "\E[1;34m Script is ${OPER}ing updates --- üí≠ \E[m";
  echo -e "\n"
  git $OPER origin ${BRANCH:-"main"}
}

_(){
   while true;do
     case $1 in
       -o | --op)
         OPER=$2;shift 2;
         ;;
       -f | --force )
       FORCE="--force";shift;
         ;;
         -b | --branch )
         BRANCH=$2;shift 2;
           ;;
         -d | --directory )
         DIRECTORY=$2;shift 2;
           ;;
       -h | --help )
         _help && exit 0;
         ;;
         *) break;
     esac
   done

   if [[ ! -z ${OPER} ]]; then
     _exec_ops
   fi
}
_ $@
